---
interface Props {
    href: string;
    textBtn: string;
}
const { href, textBtn } = Astro.props;
---

<a href={ href } class="btn">{ textBtn }</a>

<style>
    .btn {
        margin: 0;
        font-family: "Bebas Reg";
        font-weight: 300;
        letter-spacing: 2px;
        padding: 0.5rem 3rem;
        background-color: var(--light-gray);
        color: var(--gray);
        text-decoration: none;
        border-radius: 4px;
        text-transform: uppercase;
    }
</style>