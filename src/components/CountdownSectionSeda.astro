---
import CountdownSeda from "./CountdownSeda.astro";


---
<section>
    <div class="countdown-container">
        <CountdownSeda
        deadline="2025-10-12T00:00:00Z"
        />
        <img src="imgs/couple.webp" alt="">
        <div class="shadow"></div>
    </div>
    <picture>
        <img src="/assets/our-parents-tweek-up.png" alt="">
    </picture>
</section>

<style>
    section {
        width: 100%;
        display: flex;
        flex-direction: column;
        max-width: 48rem;
        margin: 0 auto;
    }
    .countdown-container {
        padding: 2.5rem 0 0;
        position: relative;
        height: 70vh;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;

        img {
            position: absolute;
            top: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: bottom;
            z-index: 0;
        }

        .shadow {
            position: absolute;
            top: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(180deg, #656565, transparent);
            z-index: 1;
        }

    }

    picture {
        width: 45%;
        height: auto;
        position: relative;
        display: block;

        img {
            width: 100%;
            height: auto;
            margin: -0.5rem 0 0 -1rem;
        }
    }
</style>