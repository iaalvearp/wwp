---
interface Props {
    src: string;
    alt?: string;
    hour: string;
    title : string;
}
const { src, alt, hour,  title }: Props = Astro.props;
---

<div class="item-container">
    <div class="icon">
        <img class="itinerary-icon" src={ src } alt={ alt || "icono-itinerario" } />
    </div>
    <div class="bar"></div>
    <div class="itinerary-text">
        <span class="itinerary-hour">{ hour }</span>
        <span class="itinerary-title">{ title }</span>
    </div>
</div>

<style>
    .item-container {
        display: grid;
        grid-template-columns: 1fr 1px 2fr;
        align-items: center;
        width: 70%;
        margin: 0 auto;
        color: var(--gray);
        padding: 0 0 0 calc(2rem + 1vw);

        .icon {
            width: calc(3rem + 3vw);
            height: auto;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            aspect-ratio: 3/4;
            
            img {
                width: 100%;
                height: auto;
                position: absolute;
            }
        }
        
        .bar {
            width: 1px;
            height: 100%;
            background-color: var(--gray);
        }
        
        .itinerary-text {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: start;
            padding: 0 0 0 calc(2rem + 1vw);

            .itinerary-hour {
                font-size: 1.5rem;
                font-family: "Cormorant", serif;
                margin: 0;
            }
            
            .itinerary-title {
                font-size: 1.5rem;
                font-family: "Bebas Reg", sans-serif;
                font-weight: 400;
                letter-spacing: 1px;
                margin: 0;
            }
        }
    }

    @media (width >= 768px) {
        .item-container {
            width: 17%;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;

            .icon {
                margin: 0 auto;
            }

            .bar {
                width: 100%;
                height: 2px;
                margin: 1rem 0 2rem;
            }
            .itinerary-text {
                padding: 0;
                text-align: center;
                align-items: center;
            }
        }
    }
</style>